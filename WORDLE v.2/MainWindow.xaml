            <TextBlock Text=" " Name="Cell24" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" />
        </UniformGrid>

        <!-- Pole do wpisywania słowa -->
        <TextBox Name="WordInput" Width="200" Height="30" VerticalAlignment="Bottom" Margin="0,0,0,40" HorizontalAlignment="Center" />
        <!-- Przycisk do sprawdzania słowa -->
        <Button Content="Sprawdź słowo" Width="120" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Center" Click="CheckWord" />
    </Grid>
</Window>